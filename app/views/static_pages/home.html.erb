<% if user_signed_in? %>
    <div class="row">

      <div class="col-md-6 col-md-push-4">
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
        <section class="activities microposts">
          <%#= render 'shared/activities' %>
        </section>
        <%#= render 'shared/feed' %>

        <% @the_real_feed.each do |feed_element| %>
            <% if feed_element.class == Micropost %>
              <section class="microposts">
                <%= render 'microposts/micropost', micropost: feed_element %>
              </section>
            <% elsif feed_element.trackable_type != 'Micropost' %>
              <section>
                <%= render 'shared/activities', activity: feed_element %>
              </section>
            <% end %>


            <% end %>
        <small>
        <%= paginate @the_real_feed %>
        </small>

      </div>

      <div class="col-md-4 col-md-pull-6">

        <%= render 'shared/sidebar' %>
      </div>

    </div>
<% else %>

    <div class="row">
      <div>

          <div class="col-md-6">

              <p class="description">
                orge Sachen<br>
                in kleinen Happen<br>
              </p>
              <p>
                <%= render 'devise/sessions/new_session_static_home' %>
              </p>
              <p>

              </p>

            <div class="row">
              <div class="col-md-12">
                <%#= image_tag @static_page_image, class: 'uploaded_image' %>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
          </div>
       </div>
    </div>


<% end %>

<style>

  .description {
      font-size: 25px;
  }

  .static_home_login {
      color: #000;
  }

  .static_home_login a {
      color: #05f;
  }

</style>
