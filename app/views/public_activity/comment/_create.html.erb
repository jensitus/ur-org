<% if activity.trackable %>
    <% c = Scalpel.cut activity.trackable.body %>
    <%#= activity.trackable.inspect %>
    <small>
        <%= link_to activity.owner.name, activity.owner if activity.owner %>
        ::
    </small>
    <small>
      <%#= activity.trackable.answer.inspect %>
      <% if activity.trackable.answer.nil? %>
      <% else %>
          <%= link_to user_post_path(slug: activity.trackable.answer.micropost.user.slug, id: activity.trackable.answer.micropost) do %>
              <%= c[0].split.each_slice(1).map{|a|a.join ' '}[0] %>
              <%= c[0].split.each_slice(1).map{|a|a.join ' '}[1] %>
              <%= c[0].split.each_slice(1).map{|a|a.join ' '}[2] %>
          <% end %>
      <% end %>
      <%= activity.created_at.strftime('%d.%m. %H:%M') %>
    </small>
<% else %>
<% end %>