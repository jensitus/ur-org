<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <h4>
        <%= image_tag @user.gravatar_url, class: 'img-rounded'  %>
        <%= @user.name %>
      </h4>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
        <h4> Microposts (<%= @user.microposts.count %>) </h4>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>

        <%= will_paginate @microposts, :renderer => BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>