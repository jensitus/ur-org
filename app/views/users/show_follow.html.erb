<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.avatar_url.nil? %>
        <%= image_tag @user.gravatar_url, width: 80, class: 'img-rounded' %>
      <% else %>
        <%= image_tag @user.avatar, width: 80, class: 'img-rounded' %>
      <% end %>
      <h4><%= @user.name %></h4>
      <span><%= link_to 'view my profile', @user %></span>
      <span><b>posts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to image_tag(user.gravatar_url, width: 10), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h4><%= @title %></h4>
    <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= paginate @users %>
    <% end %>
  </div>
</div>